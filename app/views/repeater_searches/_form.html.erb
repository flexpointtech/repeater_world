<%= form_with(model: repeater_search, class: "contents") do |form| %>
  <% if repeater_search.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(repeater_search.errors.count, "error") %> prohibited this repeater_search from being saved:</h2>

      <ul>
        <% repeater_search.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    Band:
    <% Repeater::BANDS.each do |band| %>
      <div data-controller="badge-checkbox" class="inline-block">
        <%= form.check_box "band_#{band}", class: "hidden" %>
        <%= form.label "band_#{band}", band, class: "inline-flex items-center rounded-md m-px cursor-pointer
                                                     px-2.5 py-0.5 text-md font-medium" %>
      </div>
    <% end %>
  </div>

  <div>
    Mode:
    <div data-controller="badge-checkbox" class="inline-block">
      <%= form.check_box :fm, class: "hidden" %>
      <%= form.label :fm, "FM", class: "inline-flex items-center rounded-md m-px cursor-pointer
                                        px-2.5 py-0.5 text-md font-medium" %>
    </div>
    <div data-controller="badge-checkbox" class="inline-block">
      <%= form.check_box :dstar, class: "hidden" %>
      <%= form.label :dstar, "D-Star", class: "inline-flex items-center rounded-md m-px cursor-pointer
                                               px-2.5 py-0.5 text-md font-medium" %>
    </div>
    <div data-controller="badge-checkbox" class="inline-block">
      <%= form.check_box :fusion, class: "hidden" %>
      <%= form.label :fusion, "fusion", class: "inline-flex items-center rounded-md m-px cursor-pointer
                                                px-2.5 py-0.5 text-md font-medium" %>
    </div>
    <div data-controller="badge-checkbox" class="inline-block">
      <%= form.check_box :dmr, class: "hidden" %>
      <%= form.label :dmr, "DMR", class: "inline-flex items-center rounded-md m-px cursor-pointer
                                          px-2.5 py-0.5 text-md font-medium" %>
    </div>
    <div data-controller="badge-checkbox" class="inline-block">
      <%= form.check_box :nxdn, class: "hidden" %>
      <%= form.label :nxdn, "NXDN", class: "inline-flex items-center rounded-md m-px cursor-pointer
                                            px-2.5 py-0.5 text-md font-medium" %>
    </div>
  </div>

  <div>
    <div data-controller="toggle-checkbox" class="inline-block">
      <%= form.check_box :distance_to_coordinates, class: "hidden" %>
      <%= form.label :distance_to_coordinates, role: "switch", aria_checked: "false",
                     class: "group relative inline-flex h-5 w-10 flex-shrink-0 cursor-pointer items-center justify-center rounded-full focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" do %>
        <span class="sr-only">Use setting</span>
        <span aria-hidden="true" class="pointer-events-none absolute h-full w-full rounded-md bg-white"></span>
        <!-- Enabled: "bg-indigo-600", Not Enabled: "bg-gray-200" -->
        <span aria-hidden="true" class="bg-gray-200 pointer-events-none absolute mx-auto h-4 w-9 rounded-full transition-colors duration-200 ease-in-out"></span>
        <!-- Enabled: "translate-x-5", Not Enabled: "translate-x-0" -->
        <span aria-hidden="true" class="translate-x-0 pointer-events-none absolute left-0 inline-block h-5 w-5 transform rounded-full border border-gray-200 bg-white shadow ring-0 transition-transform duration-200 ease-in-out"></span>
      <% end %>
    </div>


    Within <%= form.text_field :distance %><%= form.select :distance_unit, RepeaterSearch::DISTANCE_UNITS %> of
    coordinates <%= form.text_field :latitude %> <%= form.text_field :longitude %>
  </div>
  <div class="inline">
    <%= form.submit "Search", class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
